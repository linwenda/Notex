{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "IdentityServer": {
    "Authority": "https://localhost:5001",
    "ApiName": "MarchNote.Api",
    "RequireHttpsMetadata": false,
    "Certificates": {
      "Path": "",
      "Secret": ""
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SqlServer": "Server=localhost;Initial Catalog=MarchNote;Integrated Security=true;"
  },
  "Serilog": {
    "SeqServerUrl": "http://localhost:5341/",
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    }
  },
  "AttachmentServer": {
    "SavePath": "D:\\temp"
  }
}
